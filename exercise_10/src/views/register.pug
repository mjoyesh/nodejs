extends layout

block content
    h1 Register
    form(action='/auth/register', method='POST')
        .form-group
            label(for='username') Username
            input.form-control(type='text', name='username', required)
        .form-group
            label(for='firstName') First Name
            input.form-control(type='firstName', name='firstName', required)
        .form-group
            label(for='lastName') Last Name
            input.form-control(type='lastName', name='lastName', required)
        .form-group
            label(for='email') Email
            input.form-control(type='email', name='email', required)
        .form-group
            label(for='password') Password
            input.form-control(type='password', name='password', required)
        button.btn.btn-primary(type='submit') Register
